@model Escuela_Sor_Maria.Models.TbMatriculas

@{
    ViewData["Title"] = "Matricularse";
}

<div class="container">
    <h3>Matricular Curso</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-12 ">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Matricularse" class="row g-3 needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="CedulaID" class="control-label"></label>
                            <select asp-for="CedulaID" class="form-control" asp-items="ViewBag.Estudiante" required></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CursoID " class="control-label"> Cursos Disponibles</label>
                            <div class="validation-group">
                                @foreach (var item in ViewBag.CursoID)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" asp-for="CursoID" value="@item.Value"  required>
                                        <label class="form-check-label" for="@("radio_" + item.Value)">
                                            @item.Text
                                        </label>
                                    </div>
                                }
                                <!-- Agrega un campo de oculto para capturar la validación del radio -->
                                <input type="hidden" asp-for="CursoID" />
                                <div class="invalid-feedback">Selecciona al menos un curso.</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

