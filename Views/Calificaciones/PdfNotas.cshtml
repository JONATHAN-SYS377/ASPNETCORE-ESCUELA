@model IEnumerable<Escuela_Sor_Maria.Models.tbCalificaciones>

@{
    ViewData["Title"] = "ListaNotas";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImprimirVenta</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #03A99F;
            font-size: 30px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #525659;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #03A99F;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }

        .centrar {
            text-align: center;
        }
    </style>
</head>
<body>
    @if (Model != null)
    {
        <div class="contenedor">
            <table style="width:100%">
                <tr>
                    <td>
                        <img src="~/Sor Maria 1.1.png" style="width: 200px; height:200px;" />
                    </td>
                    <td style="text-align:right">
                        <table style="margin-right:20;margin-left:auto">
                            <tr><td><p class="title2">CENTRO EDUCATIVO SOR MARIA</p></td></tr>
                            <tr><td><p class="title2">REPORTE DE PROMEDIOS</p></td></tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
            <table style="width:100%">
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    @if (Model.Any())
                                    {
                                        <p class="title">@Model.FirstOrDefault().Estudiante.Nombre @Model.FirstOrDefault().Estudiante.Aoellido1 @Model.FirstOrDefault().Estudiante.Apellido2</p>
                                    }
                                </td>
                            </tr>
                            <tr>
                                @if (Model.Any() && Model.FirstOrDefault().Estudiante != null)
                                {
                                    <td><p class="text">Identificación:  @Model.FirstOrDefault().Estudiante.Cedula</p></td>
                                }
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.Any() && Model.FirstOrDefault().Estudiante != null)
                                    {
                                        <p class="text">Telefono: @Model.FirstOrDefault().Estudiante.ContactoEmergencia</p>
                                    }
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td style="text-align:right">
                        <table style="margin-right:0;margin-left:auto">
                            <tr>
                                <td><p class="title"> </p></td>
                            </tr>
                            <tr>
                                <td><p class="text"> </p></td>
                            </tr>
                            <tr>
                                <td><p class="text"> </p></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <table class="tbproductos" style="width:100%">
                <thead>
                    <tr class="">
                        <th class="tbth">
                            Materia #
                        </th>
                        <th class="tbth">
                            Modulo
                        </th>
                        <th class="tbth">
                            Final de Modulo
                        </th>
                        <th class="tbth">
                            Promedio Final
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="td-item centrar">
                                <p class="text"> @Html.DisplayFor(modelItem => item.id)</p>
                            </td>
                            <td class="td-item">
                                <p class="text"> @Html.DisplayFor(modelItem => item.Materia.NombreMateria)</p>
                            </td>
                            <td class="td-item centrar">
                                <p class="text"> @Html.DisplayFor(modelItem => item.FechaCalificacion)</p>
                            </td>
                            <td class="td-item centrar">
                                <p class="text">  @Html.DisplayFor(modelItem => item.NotaObtenida)</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h4>Firma Profesor:</h4>
            <br />
            <h4>Firma Director:</h4>

        </div>
    }
    else
    {
        <div class="contenedor">
            <table style="width:100%">
                <tr>
                    <td>
                        <img src="~/Sor Maria 1.1.png" style="width: 200px; height:200px;" />
                    </td>
                    <td style="text-align:right">
                        <table style="margin-right:20;margin-left:auto">
                            <tr><td><p class="title2">CENTRO EDUCATIVO SOR MARIA</p></td></tr>
                            <tr><td><p class="title2">REPORTE DE PROMEDIOS</p></td></tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
            <table style="width:100%">
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    @if (Model.Any())
                                    {
                                        <p class="title">Lo siento, No se encuentra registrado como estudiante</p>
                                    }
                                </td>
                            </tr>
                            <tr>
                                @if (Model.Any() && Model.FirstOrDefault().Estudiante != null)
                                {
                                    <td><p class="text">Identificación:  </p></td>
                                }
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.Any() && Model.FirstOrDefault().Estudiante != null)
                                    {
                                        <p class="text">Telefono: </p>
                                    }
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td style="text-align:right">
                        <table style="margin-right:0;margin-left:auto">
                            <tr>
                                <td><p class="title"> </p></td>
                            </tr>
                            <tr>
                                <td><p class="text"> </p></td>
                            </tr>
                            <tr>
                                <td><p class="text"> </p></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />
            <br />
            <table class="tbproductos" style="width:100%">
                <thead>
                    <tr class="">
                        <th class="tbth">
                            Materia #
                        </th>
                        <th class="tbth">
                            Modulo
                        </th>
                        <th class="tbth">
                            Final de Modulo
                        </th>
                        <th class="tbth">
                            Promedio Final
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="td-item centrar">
                                <p class="text"> @Html.DisplayFor(modelItem => item.id)</p>
                            </td>
                            <td class="td-item">
                                <p class="text"> @Html.DisplayFor(modelItem => item.Materia.NombreMateria)</p>
                            </td>
                            <td class="td-item centrar">
                                <p class="text"> @Html.DisplayFor(modelItem => item.FechaCalificacion)</p>
                            </td>
                            <td class="td-item centrar">
                                <p class="text">  @Html.DisplayFor(modelItem => item.NotaObtenida)</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h4>Firma Profesor:</h4>
            <br />
            <h4>Firma Director:</h4>

        </div>
    }

</body>





</html>




