@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListaRoles";
}



<div class="container">
    <h1>Roles de Usuario</h1>
    <div class="row d-flex">
        <p class="col-sm-3 col-12">
            <a class="btn otorgar-boton p-1 " asp-action="CrearRol">Registrar Rol de Usuarios</a>
        </p>
        <p class="col-sm-2 col-12">
            <a class="btn otorgar-boton p-1 " asp-action="ListaUserRegistrados"> Acreditación de Roles</a>
        </p>
    </div>
    <div class="shadow-mj br-15 px-5 py-3 table-responsive">
        <table class="table table-striped table text-center text-white  ">
            <thead>
                <tr class="text-white">
                    <th hidden>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>Roles Registrados</th>
                    <th hidden>  @Html.DisplayNameFor(model => model.NormalizedName)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-white">
                        <td hidden>@Html.DisplayFor(modelitem=> item.Id)</td>
                        <td>@Html.DisplayFor(modelitem=> item.Name)</td>
                        <td hidden> @Html.DisplayFor(modelitem=> item.NormalizedName)</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="my-5">
        <a class="btn retornar-boton p-1" asp-action="Index" asp-controller="Home">Volver al menu anterior</a>
    </p>
</div>

