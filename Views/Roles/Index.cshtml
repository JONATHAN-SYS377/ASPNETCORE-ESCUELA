@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";

}
<div class="container">
    <h1>Roles de Usuario</h1>
    <p>
        <a class="btn btn-Menu" asp-action="CrearRol">Crear Rol</a>
    </p>
    <div class="shadow-mj br-15 px-5 py-3 table-responsive">
        <table class="table table-striped table text-center text-white  ">
            <thead>
                <tr class="text-white">
                    <th hidden   >@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-white">
                        <td hidden>@Html.DisplayFor(modelitem=> item.Id)</td>
                        <td>@Html.DisplayFor(modelitem=> item.Name)</td>
                        <td>@Html.DisplayFor(modelitem=> item.NormalizedName)</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="my-5">
        <a class="btn btn-Menu" asp-action="MenuRegistros" asp-controller="Home">Regresar</a>
    </p>
</div>

