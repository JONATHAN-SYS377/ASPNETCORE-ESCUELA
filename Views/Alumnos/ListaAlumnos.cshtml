@model IEnumerable<Escuela_Sor_Maria.Models.tbAlumnos>

@{
    ViewData["Title"] = "ListaAlumnos";
}


<div class="container-fluid">
    <h2>Alunos Registrados</h2>
    <hr />
    <div class="shadow-mj br-15 px-1 py-3 offser-12">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr class="text-white text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aoellido1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaNacimiento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContactoEmergencia)
                        </th>
                        <th>Condición</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class=" text-center text-white">
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aoellido1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaNacimiento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactoEmergencia)
                            </td>
                            @if (item.Estado == 1)
                            {
                                <td>
                                    Estudiante
                                </td>
                            }
                            else if (item.Estado == 2)
                            {
                                <td>
                                   Egrasado
                                </td>
                            }
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.Cedula">Edit</a> |*@
                                <a class="btn detalle-boton p-1 px-2" asp-action="Informacion" asp-route-id="@item.Cedula">Información</a> 
                                @*<a asp-action="Delete" asp-route-id="@item.Cedula">Delete</a>*@
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a class=" btn retornar-boton p-1 my-3" asp-action="Index" asp-controller="Home">Volver al Inicio</a>
</div>
