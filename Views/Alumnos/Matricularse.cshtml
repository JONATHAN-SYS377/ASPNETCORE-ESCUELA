@model Escuela_Sor_Maria.Models.TbMatriculas

@{
    ViewData["Title"] = "Matricularse";
}

<div class="container">
    <h3>Matricular Curso</h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-12 ">
            <div class="row">
                <form asp-action="Matricularse" class="row g-1 needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-5">
                        <label asp-for="CedulaID" class="control-label">Estudiante</label>
                        <select asp-for="CedulaID" class="form-control" asp-items="ViewBag.Estudiante" required></select>
                    </div>
                    <hr />
                    <div class="col-md-12">
                        <label asp-for="CursoID " class="control-label my-2"> <h2>Cursos Disponibles</h2></label>
                        <div class="row">
                            <div class="validation-group">
                                <div class="row">
                                    @foreach (var item in ViewBag.CursoID)
                                    {
                                        <div class="form-check  col-md-4 my-2">
 
                                                <input class="form-check-input" type="radio" asp-for="CursoID" value="@item.Value" id="@("radio_" + item.Value)" required>
                                                <label class="form-check-label" for="@("radio_" + item.Value)">
                                                    @item.Text
                                                </label>
 
                                        </div>
                                    }
                                </div>
                                <!-- Agrega un campo de oculto para capturar la validación del radio -->
                                @*<input type="hidden" asp-for="CursoID" />*@
                                <div class="invalid-feedback">Selecciona al menos un curso.</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group my-3">
                        <a class="btn otorgar-boton p-1 px-2 mx-2" asp-action="ListaAlumnos">Volver a la lista</a>
                        <input type="submit" value="Registrar curso" class="btn retornar-boton p-1 px-2 mx-2" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

